{% extends 'base.html.twig' %}

{% block title %}
    {{ 'welcome.title'|trans }}
{% endblock %}
{% block stylesheets %}
    {% include 'navbar.html.twig' %}

    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">

{% endblock %}
{% block body %}

    {% if pagination is defined and pagination.items|length %}

        <div class="container text-center">

        <div class="row">

        <div class="col-sm-3">
            <div class="list-group">
                <img src="error_image.png">
                <a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" href="{{ url('creator_create')}}" title="{{'action.create'|trans}}">{{ 'action.create' | trans }}</a>
            </div>
        </div>
        <div class="col-sm-9">
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <div class="row">

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'creator.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.nick'|trans, 'creator.nick') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.name'|trans, 'creator.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.surname'|trans, 'creator.surname') }}</th>
                <th>{{ 'action.show'|trans }}</th>
                <th>{{ 'action.edit'|trans }}</th>
                <th>{{ 'action.delete'|trans }}</th>

            </tr>
            </thead>
            <tbody>
            {% for creator in pagination.items %}
                <tr>
                    <td>{{ creator.id }}</td>
                    <td>{{ creator.nick }}</td>
                    <td>{{ creator.name }}</td>
                    <td>{{ creator.surname }}</td>

                    <td>
                        <a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" href="{{ url('creator_show', {id: creator.id}) }}" title="{{'action.show'|trans}}">{{ 'action.show' | trans }}</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" href="{{ url('creator_edit', {id: creator.id}) }}" title="{{'action.edit'|trans}}">{{ 'action.edit' | trans }}</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-lg active" role="button" aria-pressed="true" href="{{ url('creator_delete', {id: creator.id}) }}" title="{{'action.delete'|trans}}">{{ 'action.delete' | trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
    {%  include 'footer.html.twig' %}
{% endblock %}