{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Creator'|trans }}
{% endblock %}
{% block stylesheets %}
    {% include 'navbar.html.twig' %}

    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">

{% endblock %}
{% block body %}

    <h4>{{ 'tutaj będzie można przeglądać autorów?'|trans }}</h4>
    <br/>
    <br/>
    <br/>
    {% if pagination is defined and pagination.items|length %}

        <div class="container text-center">

        <div class="row">

        <div class="col-sm-3">

            <h3>Neil Gaiman dla uwagi</h3>
            <div class="list-group">
                <img src="https://www.toon-books.com/uploads/1/2/5/6/12564774/8090704_orig.jpg">

            </div>
        </div>
        <div class="col-sm-9">
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <div class="row">

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id'|trans, 'creator.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Nick'|trans, 'creator.nick') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Name'|trans, 'creator.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Surname'|trans, 'creator.surname') }}</th>

                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for creator in pagination.items %}
                <tr>
                    <td>{{ creator.id }}</td>
                    <td>{{ creator.nick }}</td>
                    <td>{{ creator.name }}</td>
                    <td>{{ creator.surname }}</td>


                    <td>
                        <a href="{{ url('creator_show', {id: creator.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
    {%  include 'footer.html.twig' %}
{% endblock %}